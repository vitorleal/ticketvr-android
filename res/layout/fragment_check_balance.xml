<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$DummySectionFragment" >

    <TextView
        android:id="@+id/cardLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cardNumber"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/cardNumber"
        android:text="@string/card_label" />

    <EditText
        android:id="@+id/cardNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/checkButton"
        android:layout_alignRight="@+id/checkButton"
        android:layout_below="@+id/cardLabel"
        android:ems="10"
        android:inputType="number"
        android:maxLength="12"
        android:singleLine="true" >
    </EditText>

    <Button
        android:id="@+id/checkButton"
        style="@style/Button.Main"
        android:background="@drawable/action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/cardNumber"
        android:layout_marginTop="28dp"
        android:onClick="checkMyBalance"
        android:text="@string/check_balance"
        android:enabled="false" />

</RelativeLayout>
