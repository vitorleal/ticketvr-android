<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Ticketvr" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_ticketvr</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Ticketvr</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Ticketvr</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Ticketvr</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Ticketvr</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Ticketvr</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_ticketvr</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_ticketvr</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Ticketvr</item>
        <item name="android:textColor">@color/default_ticketvr_color</item>
    </style>

    <style name="ActionBar.Solid.Ticketvr" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@color/main_red</item>
        <item name="android:titleTextStyle">@style/TitleTextStyle</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_ticketvr</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_ticketvr</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Ticketvr</item>
    </style>
    
    <style name="TitleTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="Button.Main" parent="@android:style/Theme.Holo.Light">
        <item name="android:background">@color/main_red</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ActionBar.Transparent.Ticketvr" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_ticketvr</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Ticketvr</item>
    </style>

    <style name="PopupMenu.Ticketvr" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_ticketvr</item>	
    </style>

    <style name="DropDownListView.Ticketvr" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_ticketvr</item>
    </style>

    <style name="ActionBarTabStyle.Ticketvr" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_ticketvr</item>
        <item name="android:textColor">@color/default_ticketvr_color</item>
    </style>

    <style name="DropDownNav.Ticketvr" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_ticketvr</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_ticketvr</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_ticketvr</item>
    </style>
    
    <style name="ProgressBar.Ticketvr" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_ticketvr</item>
    </style>
    
    <style name="ActionButton.CloseMode.Ticketvr" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_ticketvr</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Ticketvr.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Ticketvr</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Ticketvr</item>
    </style>

</resources>